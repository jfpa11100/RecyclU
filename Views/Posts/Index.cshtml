@model IEnumerable<RecyclU.Models.Post>
@using RecyclU.Controllers

@{
    ViewData["Title"] = "Posts";
    // Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RecyclU - Posts</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RecyclU.styles.css" asp-append-version="true" />
</head>
<body>
        <div class="contenedor2">
            <table class="table-data">
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @{
                                    string url = item.Imagen;
                                }
                                <img src="@Url.Content("~/" + url)" alt="Imagen" class="img_post">
                                <br>
                                <br>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                                <br>
                                <br>
                                <form method="get" asp-action="Details" asp-route-id="@item.Id">
                                    <button type="submit" class="ver-mas-button">VER MÁS</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    
</body>
</html>
    