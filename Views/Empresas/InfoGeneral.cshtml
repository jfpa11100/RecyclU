@model IEnumerable<RecyclU.Models.Usuario>
@{
    ViewData["Title"] = "InfoGeneral";
    Layout = null;
}

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>inicio</title>
        <link rel="stylesheet" href="pp.css">
    </head>
    <body>

        <header>

        <div class="logo">
            <img src="@Url.Content("~/imagenes/logo_recyclU_def.png")" alt="logo" class="logo_recyclU">
            <img src="@Url.Content("~/imagenes/u_recyclU.jpeg")" alt="img_u" class="u_recyclu">

        </div>
        <nav>

            <form asp-area="" asp-controller="Home" asp-action="LogIn" method="get" class="d-inline-block ml-3">
            <button type="submit" class="btn btn-primary btn-lg">Log In</button>
            </form>
            <form asp-area="" asp-controller="Usuarios" asp-action="Create" method="get" class="d-inline-block ml-3">
            <button type="submit" class="btn btn-secondary btn-lg">Sign Up</button>
            </form>

        </nav>

     
    </header>

        <div class="contenedor">

            

            <div class="izquierda">

                <form asp-area="" asp-controller="Home" asp-action="Index" method="get" class="d-inline-block ml-3">
                <button type="submit" class="btn btn-primary btn-lg">RECICLAR</button>
                </form>

                <form asp-area="" asp-controller="Empresas" asp-action="InfoGeneral" method="get" class="d-inline-block ml-3">
                    <button type="submit" class="btn btn-primary btn-lg">EMPRESAS</button>
                </form>

                <form asp-area="" asp-controller="Universidades" asp-action="InfoGeneral" method="get" class="d-inline-block ml-3">
                    <button type="submit" class="btn btn-primary btn-lg">UNIVERSIDADES</button>
                </form>


            </div>

            <div class="derecha">

                <p>empresas</p>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                           
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                          
                        </tr>
                    }
                </tbody>
            </table>

            </div>

        </div>



    </body>

        <style type="text/css">
            
            body{
                font-family: sans-serif;
                margin: 0;
                padding:0;

                }
                
            header{
            display:flex;
            height: 70 px;
            background: #A0D77C;

            justify-content: space-between;
            align-items: center;
            padding: 20px;
            margin:0;

           

            }
            
            .logo{
            
                display: flex;
                align-items: center;
            }

            .logo img{
                height:auto;
                width:auto;

            
            }

            nav{
            display: flex;
            justify-content:space-between;
            align-items: center;
            gap:10px;
            padding-bottom:0;

            
      
            }

            nav button{
            
                padding:12px;
                background: #31A51E;
                color:white;
                font-weight:bold;
                border-radius: 10px;
                border-color: #31A51E;

            }

            .contenedor{
                background: white;
                min-height:90vh;
                margin:0;
                display: grid;
                grid-template-columns: 1fr 3.1fr;
                position:relative;
            }

            .contenedor .izquierda{

                margin:30px;
                border-radius:30px;
                background: #31A51E;
                padding: 15px;
                text-align: center;
                position: center;
                rgb(233, 238, 237);
                display: flex;
                flex-direction:column;
                flex-wrap: wrap;
                gap: 12px;
                justify-content: center;
                align-items: center;

            }
            
            .contenedor .derecha{
                margin: 30px;
                border-radius: 30px;
                background: rgb(233, 238, 237);
                padding: 15px;
                text-align: center;
                position: center;
                display: flex;
                justify-content: center;
                align-items: center;
            }


            .contenedor .izquierda button {
                padding: 18px;
                background: #31A51E;
                color: white;
                font-weight: bold;
                border:0;
                font-size: 20px;

            }
        </style>
    </html>